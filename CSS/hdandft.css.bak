	width:100%;

}

header{
	
	height: 15vh;
	
}

footer{

	height : 25vh;
	bottom:0;
	margin-top: auto;
	
}





.menubar{
	position: absolute;
	width:100%;
}


li.menu{
	
	float: left;
	color:white;
}


.menubar a{
	position: relative;
	left:35%;
	
	padding-left:10px;
	
	color: yellow;
	text-decoration:none;
	margin-right: 20px
	
}

ul.menu{
	list-style-type:none;
	background-color:#333;
	margin:0;
	overflow:hidden;
	
}





li a{
	display:block;
	color:white;
	text-align:center;
	padding:15px;
	text-decoration:none;
	
}
li a:hover{
	background-color:#f9e506;
	color:#333;
}

.menubar a.active{
	background-color:#f9e506;
	color:#333;
}



