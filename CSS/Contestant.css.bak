.consttab
{
	display: flex;
	justify-content:space-around;
	flex-direction: column;
	width:100%;
   
	row-gap:10px;
	align-content:center;
	height:100%;
	
}


.const1 .constbtn
{
	margin-left:300;
	width:60%;
	
	padding:30;
	 border: 1px solid blue ;
	font-family: Verdana, sans-serif;
	font-size:45;
	text-align:left;
	box-shadow: inset 0 0 0 0 #f9e506;
	transition: ease-out 0.3s;
	outline:none;
	color:yellow;
	background-color:rgb(0,0,53);
	border-radius: 40px 20px;
}

.const1 .constbtn:hover
{
		box-shadow: inset  800px 0px 700px 0px #f9e506;
		color:rgb(0,0,53);
		
}



